<p style="color: green"><%= notice %></p>

<h1>Menus</h1>

<table>
  <thead>
    <tr>
        <td><b>No. </b></td>
        <td><b>Name</b></td>
        <td><b>Description</b></td>
        <td><b>Price</b></td>
    </tr>
  </thead>
  <tbody>
    <% @menus.each_with_index do |menu, index| %>
      <tr>
        <td><%= index+1 %>.</td>
        <td><%= menu.name %></td>
        <td><%= menu.description %></td>
        <td><%= menu.price %></td>
        <td><%= link_to "Show", menu %></td>
        <td><%= link_to "Edit", edit_menu_path(menu) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New menu", new_menu_path %>
